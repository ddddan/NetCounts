<Window x:Class="NetCounts.CustomizeDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customize" Height="300" Width="300"
        WindowStartupLocation="CenterOwner">




        <!-- Accept or cancel -->
        <DockPanel LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center">
                <Button Name="okButton" Height="25" Width="70" Margin="20" Click="okButton_Click" IsDefault="True">OK</Button>
                <Button Name="cancelButton" Height="25" Width="70" Margin="20" IsCancel="True">Cancel</Button>
            </StackPanel>
        <StackPanel Margin="10">
            <Label Content="_Client Name:" />
            <TextBox Name="txtClient" />
            <Label Content="Campaign _Name:" />
            <TextBox Name="txtCampaign" />
        </StackPanel>
        </DockPanel>



</Window>
