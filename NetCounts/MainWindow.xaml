<Window x:Class="NetCounts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Net Counts File Generator" Height="600" Width="800">
    <DockPanel LastChildFill="True">
        <Button Name="btnChooseFile" DockPanel.Dock="Bottom" Height="25" Width="110" Margin="20" Click="btnChooseFile_Click">Choose File...</Button>

        <Border BorderBrush="{StaticResource FadedDGrey}" BorderThickness="0,0,0,1" >
            <TextBlock DockPanel.Dock="Top" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36px" TextWrapping="Wrap" TextAlignment="Center" Foreground="{StaticResource Mango}">
            
            </TextBlock>
        </Border>
    </DockPanel>
</Window>
